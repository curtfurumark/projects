<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".art.PictureEditActivity">

    <TextView
        android:id="@+id/textView_pictureEditActivity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no artwork"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_pictureEdit_picture_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="picture data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_pictureEditActivity_heading" />
    <TextView
        android:id="@+id/textView_pictureEdit_picture_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="picture path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_pictureEdit_picture_data" />

    <ImageView
        android:id="@+id/imageView_make_it_funky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_pictureEdit_picture_path"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>