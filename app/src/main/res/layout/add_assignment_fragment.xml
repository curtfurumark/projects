<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/addAssignment_editText_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="heading"
        android:inputType="text"
        android:minHeight="48dp" />


    <RadioGroup
        android:id="@+id/addAssignment_radioGroup_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/addAssignement_radioButton_laps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="laps" />

        <RadioButton
            android:id="@+id/addAssignement_radioButton_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repetitions" />
    </RadioGroup>

    <Button
        android:id="@+id/addAssignment_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add" />

</LinearLayout>